          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (pm.response.code === 200) {",
              "  const data = pm.response.json();",
              "  if (data && data.token) {",
              "    pm.collectionVariables.set('token', data.token);",
              "  }",
              "}"
